# Environment Variables for Urban Issue Forecasting System

# Database Configuration
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_postgres_password_here
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=traffy_db

# MongoDB Configuration
MONGO_HOST=localhost
MONGO_PORT=27017
MONGO_USER=admin
MONGO_PASSWORD=your_mongo_password_here

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379

# Airflow Configuration
AIRFLOW__CORE__EXECUTOR=LocalExecutor
AIRFLOW__DATABASE__SQL_ALCHEMY_CONN=postgresql+psycopg2://postgres:postgres@localhost/traffy_db
AIRFLOW__WEBSERVER__SECRET_KEY=your_secret_key_here

# Spark Configuration
SPARK_MASTER_URL=spark://localhost:7077

# API Keys (if needed)
# OPENAI_API_KEY=your_openai_key_here
# GOOGLE_MAPS_API_KEY=your_google_maps_key_here

# Paths
DATA_RAW_PATH=./data/raw
DATA_PROCESSED_PATH=./data/processed
DATA_EXTERNAL_PATH=./data/external
DELTA_LAKE_PATH=./data/delta_lake

# Model Paths
ML_MODELS_PATH=./ml_models
FORECASTING_MODEL_PATH=./ml_models/forecasting/models
ANOMALY_MODEL_PATH=./ml_models/anomaly_detection/models

# Logging
LOG_LEVEL=INFO
LOG_FILE=./logs/app.log

# Dashboard Configuration
DASHBOARD_PORT=8501
DASHBOARD_HOST=0.0.0.0
